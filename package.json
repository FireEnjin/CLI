{
  "name": "@fireenjin/cli",
  "version": "1.0.3",
  "description": "A set of tools for speeding up production of full-stack Firebase projects.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/",
    "lint": "tslint --project tsconfig.json",
    "plop": "plop",
    "publish": "npm run build",
    "refresh": "rimraf ./node_modules ./package-lock.json && npm install",
    "semantic-release": "semantic-release",
    "serve": "tsc -w",
    "start": "npm run serve",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "bin": {
    "fireenjin": "dist/index.js"
  },
  "dependencies": {
    "faker": "^5.5.3",
    "firebase-admin": "^10.0.0",
    "inquirer": "^8.2.0",
    "nodegit": "^0.27.0",
    "plop": "^2.7.6",
    "pluralize": "^8.0.0",
    "prettier": "^2.4.1",
    "recursive-copy": "^2.0.13",
    "rimraf": "^3.0.2",
    "tiny-glob": "^0.2.9",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "jest": "^27.3.1",
    "semantic-release": "^18.0.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.0.4",
    "tslib": "^2.3.1",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FireEnjin/CLI.git"
  },
  "keywords": [
    "firebase",
    "github",
    "madness",
    "labs",
    "popcorn245",
    "youtube",
    "javascript",
    "typescript"
  ],
  "author": "Madness Labs",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FireEnjin/CLI/issues"
  },
  "homepage": "https://github.com/FireEnjin/CLI#readme",
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": false
}
